{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hoagie/api-util": ["libs/api-util/src/index.ts"],
      "@hoagie/cdk-lib": ["libs/cdk-lib/src/index.ts"],
      "@hoagie/dono-service": ["libs/dono-service/src/index.ts"],
      "@hoagie/secrets-provider": ["libs/secrets-provider/src/index.ts"],
      "@hoagie/service-clients": ["libs/service-clients/src/index.ts"],
      "@hoagie/song-eval-service": ["libs/song-eval-service/src/index.ts"],
      "@hoagie/song-lookup-service": ["libs/song-lookup-service/src/index.ts"],
      "@hoagie/streamersonglist-service": ["libs/streamersonglist-service/src/index.ts"],
      "@hoagie/test": ["libs/test/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
