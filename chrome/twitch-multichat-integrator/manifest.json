{
  "manifest_version": 3,
  "name": "Twitch Multichat Integrator",
  "version": "1.0.0",
  "description": "Monitor Twitch DOM and communicate between tabs",
  "permissions": [
    "tabs",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["dist/content-twitch.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["dist/content-youtube.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "oauth2": {
    "client_id": "360294299808-iqequqbflf9tfsfr6gghhil1hblrq76j.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.readonly",
      "https://www.googleapis.com/auth/youtube.force-ssl"
    ]
  }
}
